  // friendly:bool = false (deprecated, priority: 1);
  // inventory:[ubyte];
  // color:Color = Blue;
  // test:Any;
}

// Is this float64?
struct Transform {
  x:double;
  y:double;
}

struct Input {
  up:bool;
  down:bool;
  left:bool;
  right:bool;
}

struct Body {
  val:uint32;
}
