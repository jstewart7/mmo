union Payload { WorldUpdate, ClientLogin, ClientLoginResp, ClientLogout, ClientLogoutResp }

table Message {
  payload:Payload;
}

table WorldUpdate {
  user_id:ulong;
  entities:[Entity];
  delete:[uint32];
}

table ClientLogin {
  user_id:ulong;
}

table ClientLoginResp {
  user_id:ulong;
  id:uint32;
}

table ClientLogout {
  user_id:ulong;
}

table ClientLogoutResp {
  user_id:ulong;
  id:uint32;
}

table Entity {
  id:uint32;
  transform:Transform;
  input:Input;
  body:Body;

  // mana:short = 150;
